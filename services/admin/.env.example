# Environment Configuration
ENVIRONMENT=development
DEBUG=false

# Server
PORT=3004
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://marketplace_user:marketplace_password@localhost:5432/llm_marketplace
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache
REDIS_URL=redis://:redis_password@localhost:6379/0
CACHE_TTL=300

# Kafka
KAFKA_BROKERS=localhost:29092
KAFKA_TOPIC_PREFIX=marketplace

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3004

# Service URLs
REGISTRY_URL=http://localhost:4000
POLICY_ENGINE_URL=http://localhost:4001
ANALYTICS_HUB_URL=http://localhost:4002
GOVERNANCE_DASHBOARD_URL=http://localhost:4003
PUBLISHING_SERVICE_URL=http://localhost:3001
DISCOVERY_SERVICE_URL=http://localhost:3002
CONSUMPTION_SERVICE_URL=http://localhost:3003

# API Keys
REGISTRY_API_KEY=dev-registry-key
POLICY_ENGINE_API_KEY=dev-policy-key
ANALYTICS_HUB_API_KEY=dev-analytics-key
GOVERNANCE_API_KEY=dev-governance-key

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_AGGREGATION_INTERVAL=60

# Workflow
WORKFLOW_APPROVAL_TIMEOUT=86400
WORKFLOW_AUTO_APPROVE_THRESHOLD=3

# Analytics
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_RETENTION_DAYS=90

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# OpenTelemetry
OTEL_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9094
